<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Text on top-bar -->
    <Style x:Key="TopBar_Text" TargetType="TextBlock">
        <Setter Property="FontSize" Value="25" />
        <Setter Property="Foreground" Value="#B55400" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#B55400" />
    </Style>

    <!-- Label in Create customer view -->
    <Style x:Key="CreateCustomer_Label" TargetType="Label">
        <Setter Property="Foreground" Value="#B55400" />
        <Setter Property="Background" Value="#222831" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- TextBox in Create customer view -->
    <Style x:Key="CreateCustomer_Text" TargetType="TextBox">
        <Setter Property="Height" Value="30" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#B55400" />
        <Setter Property="Background" Value="#222831" />
        <Setter Property="Padding" Value="0 3 0 0" />
        <Setter Property="Width" Value="270" />
        <Setter Property="Margin" Value="0 20 30 0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Heading in Display all customers view -->
    <Style x:Key="CustomersList_Heading" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#B55400" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <!-- ListView for Customers list -->
    <Style x:Key="CustomersList_ListView" TargetType="ListView">
        <Setter Property="Background" Value="#222831" />
    </Style>

    <!-- Customer list-items -->
    <Style x:Key="CustomerList_Items" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#FFFFFF" />
    </Style>

</ResourceDictionary>